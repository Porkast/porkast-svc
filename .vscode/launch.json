{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bun: Debug Hono App",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "--inspect",
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "restart": true,
            "sourceMaps": true
        }
    ]
}